{
  "compilerOptions": {
    "target": "ES6",
    "types": ["jest", "@testing-library/jest-dom"], // Agrega "cypress" aqu√≠
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "src/tests/setupTests.ts",
    "src/tests/custom.d.ts",
  ],
  "exclude": ["node_modules"]
}